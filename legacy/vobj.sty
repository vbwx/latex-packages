%% gleitende Grafiken, zentriert bzw. ueber Seitenbreite verteilt
\newcommand{\fig}[4][]{%
\begin{figure}[!htbp]
\centering
\includegraphics{#2}
\def\temparg{#1}
\ifx\temparg\empty \caption{#3}
\else \caption[#1]{#3}
\fi
\label{#4}
\end{figure}}

