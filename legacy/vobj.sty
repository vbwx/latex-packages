\newlength{\tempobjwidth}

%% Formeln mit Erklaerungen
\newcommand{\eqndesc}[2]{%
\raisebox{3.9ex}{\begin{minipage}[t]{0.35\textwidth}
\begin{displaymath}
\begin{split}
#1
\end{split}
\end{displaymath}
\end{minipage}}\hfill
\begin{minipage}[t]{0.6\textwidth}
\raggedright
\footnotesize{#2}\raisebox{2.8ex}{\,}
\end{minipage}}

%% "zweispaltiger" Satz (z.B. Illustration neben Formeln)
\newcommand{\divpar}[3][0.5\textwidth]{%
\setlength{\tempobjwidth}{1\textwidth}
\addtolength{\tempobjwidth}{-#1}
\raisebox{-8ex}{\parbox[t]{#1}{#2}}\parbox[t]{\tempobjwidth}{#3}}

\newcommand{\Divpar}[3][0.5\textwidth]{%
