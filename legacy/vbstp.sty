%% Einige Textvereinfachende Befehle; dieser Stylefile wird noch erweitert!
\newcommand{\chem}[1]{\ensuremath{\mathrm{#1}}}
\newcommand{\Index}[1]{#1\index{#1}}
\newcommand{\iSee}[2]{#1\index{#1|see{#2}}}

%% Makros fuer die Zusammenarbeit mit ChemTeX
%% Bei Problemen kann man die Laenge \xRaise redefinieren!
\newlength\xRaise
\setlength\xRaise{7ex}
\newcommand{\qxq}[1][+]{%
\qquad\raisebox{\xRaise}{#1}\qquad}
\newcommand{\qx}[1][+ $\cdots$]{%
\qquad\raisebox{\xRaise}{#1}}
\newcommand{\xq}[1][$\cdots$ +]{%
\raisebox{\xRaise}{#1}\qquad}

%% Abschnitte, Überschriften
\newcommand{\Sec}[2][]{%
\def\temparg{#1}
\ifx\temparg\empty
  \section*{#2}
  \addcontentsline{toc}{section}{#2}
\else
  \section*[#1]{#2}
  \addcontentsline{toc}{section}{#1}
\fi}

\newcommand{\cSec}[2][]{%
\def\temparg{#1}
\ifx\temparg\empty
  \centerline{\section*{#2}}
  \addcontentsline{toc}{section}{#2}
\else
  \centerline{\section*[#1]{#2}}
  \addcontentsline{toc}{section}{#1}
\fi}

\newcommand{\Ssec}[2][]{%
\def\temparg{#1}
\ifx\temparg\empty
  \subsection*{#2}
  \addcontentsline{toc}{subsection}{#2}
\else
  \section*[#1]{#2}
  \addcontentsline{toc}{subsection}{#1}
\fi}

\newcommand{\Sssec}[2][]{%
\def\temparg{#1}
\ifx\temparg\empty
  \subsubsection*{#2}
  \addcontentsline{toc}{subsubsection}{#2}
\else
  \section*[#1]{#2}
  \addcontentsline{toc}{subsubsection}{#1}
\fi}

\newcommand{\Chap}[2][]{%
\def\temparg{#1}
\ifx\temparg\empty
  \chapter*{#2}
  \addcontentsline{toc}{chapter}{#2}
\else
  \section*[#1]{#2}
  \addcontentsline{toc}{chapter}{#1}
\fi}

%% Benutzerdefinierter Counter, der sich bei der Ausgabe automatisch erhoeht
